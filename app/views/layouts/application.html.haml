!!!
%html
  %head
    = favicon_link_tag 'favicon.ico'
    %title Instamaker
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=true'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags

  %body
    
    %p.notice= notice
    %p.alert= alert

    .header
      .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        .container
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            / %a.navbar-brand{:href => "/"} Instamaker
            #logo
              %a{:href => "/"}
                %img#logo_img{:src => "/images/instamaker_logo2.png"}/

          .navbar-collapse.collapse
            %form.navbar-form.navbar-right{:role => "form"}
              .form-group
                - if user_signed_in?
                  = link_to "Make a Post", new_post_path, class: 'btn btn-primary btn-lg btn-success' 
                  = link_to('Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-primary btn-lg') 
                  = link_to('Edit registration', edit_user_registration_path, class: 'btn btn-primary btn-lg') 
                - else
                  = link_to('Sign in', new_user_session_path, class: 'btn btn-primary btn-lg')    
                  = link_to('Sign up', new_user_registration_path, class: 'btn btn-primary btn-lg')  

                / %input.form-control{:placeholder => "Email", :type => "text"}/
              / .form-group
              /   %input.form-control{:placeholder => "Password", :type => "password"}/
              / %button.btn.btn-success{:type => "submit"} Sign in

    = yield
    .container
      %footer
        %p © Stephan Musgrave 2014
    

/ Modal
#sign-in-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-body
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
        = render 'layouts/sign_in'