
<% if @posts.any? %>
  <% @posts.each do |post| %>
  <div class='Post'>
    <h2><%= post.title %></h2>
      <%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
      <p><%= post.description %></p>
      <%= link_to "Edit #{post.title}", edit_post_path(post) %>
      <%= link_to "Delete #{post.title}", post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>

<% else %>
  No posts yet
<% end %>

<%= link_to "Make a Post", new_post_path %>


