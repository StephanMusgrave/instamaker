
<div class="jumbotron">
  <div class="container">
    <h1>Hello, world!</h1>
    <p>This is a template for </p>
    <p>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-lg' %> 
    
    <% if user_signed_in? %>
    <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-primary btn-lg') %>
    <%= link_to('Edit registration', edit_user_registration_path, class: 'btn btn-primary btn-lg') %>
  <% else %>
    <%= link_to('Login', new_user_session_path, class: 'btn btn-primary btn-lg')  %>  
    <%= link_to('Register', new_user_registration_path, class: 'btn btn-primary btn-lg')  %>
  <% end %>
  </p>
  </div>
</div>

<div class='container'>
  <% if @posts.any? %>
    <div class='row'>
    <% @posts.each do |post| %>
      <div class='col-md-4'>
      <h2><%= post.title %></h2>     
        <%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
        <p>Posted by <%= post.user.email %></p>
        <p><%= post.description %></p>
        <% if post.user == current_user %>  
          <%= link_to "Edit", edit_post_path(post) %>
          <%= link_to "Delete", post_path(post), method: :delete%>
        <%end%>
      <% end %>
      </div>
    </div>
  <% else %>
    <h2>No posts yet</h2>
  <% end %>

  <%= link_to "Make a Post", new_post_path %>

</div>

