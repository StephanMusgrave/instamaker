 <div class='col-md-4 post' data-id='<%= post.id %>'>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= post.title %></h3>
      </div>
      <div class="panel-body">
        <% if post.picture.exists? %>
          <%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
        <% end %>
        <p><%= post.description %></p>
        <p><% post.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag) %>
        <% end %></p>
        <p>posted by <%= post.user.email %></p>
        <div class="buttons">
        <% if post.user == current_user %>  
          <%= link_to "Edit", edit_post_path(post), class: 'btn btn-sm btn-warning'%>
          <%= link_to "Delete", post_path(post), method: :delete, class: 'btn btn-sm btn-danger' %>
          <%= link_to "â™¥ #{post.likes.count}", post_likes_path(post), class: 'like_button btn btn-sm btn-success' %>
        <%end%>
        </div>
        <%= link_to 'Show More', '#', class: 'btn btn-sm btn-info', data: { toggle: 'modal', target: ".image-modal-#{post.id}" } %>
      </div>
    </div>
  </div>

  <div class="modal fade image-modal-<%= post.id %>">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">                
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title"><%= post.title %></h4>
        </div>

        <div class='modal-body'>
          <%= image_tag post.picture.url %>
        </div>
      </div>
    </div>
  </div>
